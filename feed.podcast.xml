---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:content="http://purl.org/rss/1.0/modules/content/" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:wfw="http://wellformedweb.org/CommentAPI/" xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:media="http://www.rssboard.org/media-rss" version="2.0">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>en-US</language>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <itunes:author>{{ site.author.name }}</itunes:author>
    <itunes:subtitle>{{ site.podcast.subtitle }}</itunes:subtitle>
    <itunes:summary>{{ site.podcast.description }}</itunes:summary>
    <description>{{ site.podcast.description }}</description>
    <itunes:explicit>{% if site.podcast.explicit == true %}yes{% else %}no{% endif %}</itunes:explicit>
    <itunes:keywords>{% for keyword in site.podcast.keywords %}{{ keyword }}{% if forloop.last == false %},{% endif %}{% endfor %}</itunes:keywords>
    <itunes:owner>
      <itunes:name>{{ site.author.name }}</itunes:name>
      <itunes:email>{{ site.author.email }}</itunes:email>
    </itunes:owner>
    <itunes:new-feed-url>{{ '/feed.podcast.xml' | prepend: site.baseurl | prepend: site.url }}</itunes:new-feed-url>
    <atom:link href="{{ '/feed.podcast.xml' | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml" />
    <itunes:category text="{{ site.podcast.category }}"/> 
    <itunes:image href="{{ site.logo }}"/>
    {% for podcast in site.categories.podcast %}
    <item>
      <title>{{ podcast.title | xml_escape }}</title>
      <dc:creator>{{ site.title | xml_escape }}</dc:creator>
      <pubDate>{{ podcast.date | date_to_rfc822}}</pubDate>
      <link>{{ podcast.url | prepend: site.baseurl | prepend: site.url }}</link>
      <guid isPermaLink="true">{{ podcast.url | prepend: site.baseurl | prepend: site.url }}</guid>
      <description><![CDATA[{{ podcast.content | xml_escape }}]]>
      </description>
      <media:content type="image/png" url="{{ site.logo | xml_escape}}" medium="image" isDefault="true" width="1500" height="844">
        <media:title type="plain">{{ podcast.title | xml_escape }}</media:title>
      </media:content>
      <itunes:author>{{ site.title | xml_escape }}</itunes:author>
      <itunes:explicit>{% if site.podcast.explicit == true %}yes{% else %}no{% endif %}</itunes:explicit>
      <itunes:image href="{{ site.logo | xml_escape }}"/>
      <enclosure url="{{ podcast.google_drive_id | prepend: site.podcast.google_drive_prefix | xml_escape }}" length="{{ podcast.byte_length }}" type="audio/mp4"/>
    </item>
    {% endfor %}
  </channel>
</rss>